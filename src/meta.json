{
    "$schema": "http://json-schema.org/draft-06/schema",
    "type": "object",
    "properties": {
        "$id": {
            "type": "string"
        },
        "domains": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/Domain"
            }
        }
    },
    "required": [
        "domains"
    ],
    "additionalProperties": false,
    "definitions": {
        "TypeId": {
            "type": "string",
            "pattern": "^#[A-Z][a-zA-Z0-9]+$"
        },
        "TypeRef": {
            "type": "string",
            "pattern": "^#/domains/[A-Z][a-zA-Z0-9]+/types/[A-Z][a-zA-Z0-9]+$"
        },
        "Domain": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string"
                },
                "private": {
                    "type": "boolean"
                },
                "inputs": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/InputDef"
                    }
                },
                "outputs": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/OutputDef"
                    }
                },
                "types": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/TypeDef"
                    }
                },
                "errors": {
                    "type": "array"
                }
            },
            "required": [
                "description",
                "inputs",
                "outputs",
                "types",
                "errors",
                "private"
            ],
            "additionalProperties": false
        },
        "InputDef": {
            "properties": {
                "typeRef": { "$ref": "#/definitions/TypeRef" },
                "description": { "type": "string" },
                "default": {},
                "deprecated": {
                    "type": "boolean"
                },
                "flow": { "$ref": "#/definitions/Flow" }
            },
            "required": ["typeRef", "flow"],
            "additionalProperties": false
        },
        "OutputDef": {
            "properties": {
                "typeRef": { "$ref": "#/definitions/TypeRef" },
                "description": { "type": "string" },
                "staged": {
                    "type": "boolean"
                }
            },
            "required": ["typeRef"],
            "additionalProperties": false
        },
        "TypeDef": {
            "allOf": [
                { "$ref": "http://json-schema.org/draft-06/schema" },
                {
                    "oneOf": [
                        {
                            "properties": {
                                "type": { "$ref": "http://json-schema.org/draft-06/schema#/type" }
                            },
                            "required": [
                                "type"
                            ]
                        },
                        {
                            "properties": {
                                "oneOf": {}
                            },
                            "required": [
                                "oneOf"
                            ]
                        }
                    ]
                }
            ]
        },
        "Flow": {
            "oneOf": [
                {
                    "properties": {
                        "type": { "type": "string", "const": "initial" }
                    },
                    "required": [ "type" ]
                },
                {
                    "properties": {
                        "type": { "type": "string", "const": "deferrable" }
                    },
                    "required": [ "type" ]
                },
                {
                    "properties": {
                        "type": { "type": "string", "const": "selectOne" },
                        "outputKey": { "type": "string" }
                    },
                    "required": [ "type", "outputKey" ]
                },
                {
                    "properties": {
                        "type": { "type": "string", "const": "multiStage" },
                        "outputKey": { "type": "string" }
                    },
                    "required": [ "type", "outputKey" ]
                },
                {
                    "properties": {
                        "type": { "type": "string", "const": "consent" },
                        "outputKey": { "type": "string" }
                    },
                    "required": [ "type", "outputKey" ]
                }
            ]
        }
    }
}

